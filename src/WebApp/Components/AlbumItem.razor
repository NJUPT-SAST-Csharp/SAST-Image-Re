@inject IAlbumAPI Api
@inject IJSRuntime JS
@inject NavigationManager Nav



@code {
    [Parameter, EditorRequired]
    public AlbumDto Album { get; set; }
    private string Style => $"view-transition-name: album-{Album.Id};";

    void Enter() => Nav.NavigateTo("albums/" + Album.Id);
}


<div class="item" @onclick="Enter">
    <MImage Src="@IAlbumAPI.GetCover(Album.Id)" Style="@Style">
        <PlaceholderContent>
            <MRow Class="fill-height ma-0" Align="@AlignTypes.Center" Justify="@JustifyTypes.Center">
                <MProgressCircular Indeterminate></MProgressCircular>
            </MRow>
        </PlaceholderContent>
    </MImage>
</div>

<style>
    .item {
        transition: ease-in-out, 0.2s;
        max-width: 300px;
        cursor: pointer;
    }

    .item:hover {
        transform: scale(1.1);
    }
</style>
