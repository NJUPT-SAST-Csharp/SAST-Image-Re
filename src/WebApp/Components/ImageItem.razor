@inject IJSRuntime JS
@inject NavigationManager Nav

@code {
    [Parameter, EditorRequired]
    public ImageDto Image { get; set; }

    private string Style => $"view-transition-name: image-{Image.Id};";

    private void NavigateTo()
    {
        Nav.NavigateTo($"/images/{Image.Id}");
    }
}

<MImage Src="@IImageAPI.GetImage(Image.Id)" Class="image-item" Contain title="@Image.Title" Style="@Style"
    onclick="@(() => NavigateTo())" />

<style>
    .image-item {
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .image-item:hover {
        transform: scale(1.035)
    }
</style>