@inject IJSRuntime JS
@inject NavigationManager Nav

@code {
    [Parameter, EditorRequired]
    public ImageItemDto Image { get; set; }

    private void NavigateTo()
    {
        Nav.NavigateTo($"/images/{Image.Id}");
    }
}

<MImage Src="@IImageAPI.GetImage(Image.Id)" Contain title="@Image.Title" onclick="@(() => NavigateTo())" Class="image-item" />

<style>
    .image-item{
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .image-item:hover{
            transform: scale(1.05)
        }
</style>